# ThriftEase Backend Environment Variables

# Database Configuration - Using SQLite for development
DATABASE_URL=sqlite:///./thrift_ease.db

# Security
SECRET_KEY=thriftease-super-secret-key-for-development-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:5173", "http://127.0.0.1:3000"]

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Environment
ENVIRONMENT=development
DEBUG=True
