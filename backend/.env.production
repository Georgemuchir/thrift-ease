# Production Environment Variables for Render
# Copy these to your Render service environment variables

# Database (will be auto-filled by Render when you attach a PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Security (generate a strong secret key)
SECRET_KEY=your-super-secret-jwt-key-at-least-32-characters-long

# Environment
ENVIRONMENT=production
DEBUG=False

# CORS - Add your Netlify domain here
CORS_ORIGINS=https://thriftease.netlify.app,http://localhost:5173

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# JWT
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
